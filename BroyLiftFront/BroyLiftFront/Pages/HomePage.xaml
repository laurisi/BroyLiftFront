<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BroyLiftFront.Pages.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Add Exercise" x:Name="BtnTraining" Clicked="BtnTraining_Clicked" />
            <Button Text="Your training diary" x:Name="BtnDiary" Clicked="BtnDiary_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>